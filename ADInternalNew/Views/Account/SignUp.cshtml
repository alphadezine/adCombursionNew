@{
    Layout = null;
}

<!DOCTYPE html>

<html class="no-js sidebar-large">

<head>
    <!-- BEGIN META SECTION -->
    <meta charset="utf-8">
    <title> Welcome! Sign Up </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta content="themes-lab" name="author" />
    <link rel="shortcut icon" href="~/Content/img/favicon.png">
    <!-- END META SECTION -->

    <!-- BEGIN MANDATORY STYLE -->
    <link href="~/Content/css/icons/icons.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/plugins.min.css" rel="stylesheet">
    @*<link href="~/Content/plugins/bootstrap-loading/lada.min.css" rel="stylesheet">*@
    <link href="~/Content/css/style.min.css" rel="stylesheet">
    <!-- END  MANDATORY STYLE -->

    <!-- BEGIN PAGE LEVEL STYLE -->
    <link href="~/Content/css/animate-custom.css" rel="stylesheet">
    <!-- END PAGE LEVEL STYLE -->

    <script src="~/Content/plugins/modernizr/modernizr-2.6.2-respond-1.1.0.min.js"></script>
</head>

<body class="login fade-in" data-page="signup">
    <!-- START SIGNUP BOX -->
    <div class="container" id="login-block">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
                <div class="login-box clearfix animated flipInY">
                    <div class="page-icon animated bounceInDown">
                        <img src="~/Content/img/account/register-icon.png" alt="Register icon" />
                    </div>
                    <div class="login-logo">
                        <a href="#">
                            <img src="~/Content/img/logo.png" alt="Company Logo" />
                        </a>
                    </div>
                    <hr>
                    <div class="login-form">
                        <!-- Start Error box -->
                        <div class="alert alert-danger hide">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <h4>Error!</h4>
                            Your Error Message goes here
                        </div>
                        <!-- End Error box -->
                        <form action="#" method="post">
                            <input type="text" placeholder="First Name" class="input-field" required />
                            <input type="text" placeholder="Last Name" class="input-field" required />
                            <input type="email" placeholder="Email ID" class="input-field" required />
                            <input type="text" placeholder="Phone Number" class="input-field" required />
                            
                            <button type="submit" class="btn btn-login btn-reset">Sign Up</button>
                        </form>
                        <div class="login-links">
                            <a href="login.html">Already have an account? <strong>Sign In</strong></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END SIGNUP BOX -->
    <!-- BEGIN MANDATORY SCRIPTS -->
    <script src="~/Content/plugins/jquery-1.11.js"></script>
    <script src="~/Content/plugins/jquery-migrate-1.2.1.js"></script>
    <script src="~/Content/plugins/jquery-ui/jquery-ui-1.10.4.min.js"></script>
    <script src="~/Content/plugins/jquery-mobile/jquery.mobile-1.4.2.js"></script>
    <script src="~/Content/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/plugins/jquery.cookie.min.js" type="text/javascript"></script>
    <!-- END MANDATORY SCRIPTS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src="~/Content/plugins/backstretch/backstretch.min.js"></script>
   @* <script src="~/Content/plugins/bootstrap-loading/lada.min.js"></script>*@
    <script src="~/Content/js/account.js"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
</body>

</html>

