@{
    ViewBag.Title = "ClientDashboard";
    Layout = "~/Views/Shared/master.cshtml";
}

 <div id="main-content" class="dashboard">
   <div class="row m-t-20">
      <div id="notif" style="cursor:pointer">
            <div class="col-md-3 col-sm-12">
              <div class="panel no-bd bd-3 panel-stat">
                <div class="panel-body bg-blue p-15">
                  <div class="row m-b-6">
                    <div class="col-xs-3">
                      <i class="glyph-icon flaticon-notifications"></i>
                    </div>
                     <div class="col-xs-9">
                      <small class="stat-title">NOTIFICATIONS</small>
                        <h1 class="m-0 w-300">25 </h1>
                     </div>
                    </div>
                    </div> 
                  </div>
                 </div>
              </div>
             <div id="inprogress" style="cursor:pointer">
            <div class="col-md-3 col-sm-12">
              <div class="panel no-bd bd-3 panel-stat">
                <div class="panel-body bg-red p-15">
                  <div class="row m-b-6">
                    <div class="col-xs-3">
                      <i class="glyph-icon flaticon-educational"></i>
                    </div>
                     <div class="col-xs-9">
                      <small class="stat-title"> IN PROGRESS </small>
                      <h1 class="m-0 w-300">47 </h1>
                    </div>  
                  </div>
                 
                </div>
              </div>
            </div>
             </div>
              <div id="Corders" style="cursor:pointer">
            <div class="col-md-3 col-sm-12">
              <div class="panel no-bd bd-3 panel-stat">
                <div class="panel-body bg-green p-15">
                  <div class="row m-b-6">
                    <div class="col-xs-3">
                      <i class="glyph-icon flaticon-orders"></i>
                    </div>
                     <div class="col-xs-9">
                      <small class="stat-title">MONTH/YEAR</small>
                     
                         <h1 class="m-0 w-300">200 </h1>
                      </div>
                    </div>  
                  </div>
                  
                </div>
              </div>
            </div>
            

         <div id="DueAmt" style="cursor:pointer">
            <div class="col-md-3 col-sm-12">
              <div class="panel no-bd bd-3 panel-stat">
                <div class="panel-body bg-dark p-15">
                  <div class="row m-b-6">
                    <div class="col-xs-3">
                      <i class="glyph-icon flaticon-incomes"></i>
                    </div>
                     <div class="col-xs-9">
                      <small class="stat-title">DUE AMOUNT</small>
                      <h1 class="m-0 w-500">$0</h1>
                    </div>  
                  </div>
                 </div>
                </div>
              </div>
            </div>
            </div>

      <div class="row">
          <div class="col-md-12">
              <div class="panel">
                  <div class="panel body">
                      <div id="main">
                           @Html.Action("Notifications", "Client")
                      </div>
                  </div>
              </div>
          </div>
      </div>
            
        </div>

 @section script
    {
    <script>
        $(document).ready(function () {
            $('#notif').click(function () {

                $('#main').load('Client/Notifications');
             
            });

          $('#inprogress').click(function () {
                $('#main').load('Client/InProgress');

          });

          $('#Corders').click(function () {

              $('#main').load('Client/Completed');


          });

          $('#DueAmt').click(function () {

              $('#main').load('Client/DueAmt');


          });

        });
    </script>
}
