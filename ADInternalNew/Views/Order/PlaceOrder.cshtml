@{
    ViewBag.Title = "PlaceOrder";
    Layout = "~/Views/Shared/master.cshtml";
}

<div class="post">
    <div class="panel panel-default">
        <div class="row">
            <div class="col-md-8 post-column-left">
                <div class="form-group">
                    <input type="text" class="form-control f-18" id="ordername" placeholder="Type Order name..">
                </div>
                <div class="form-group">
                    <textarea id="editor1" name="post-edit" class="cke-editor"></textarea>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" data-target="#linkOrderModal" data-toggle="modal"><i class="fa fa-link"></i><span>&nbsp; Link Order </span></button>
                    <div class="modal fade" id="linkOrderModal" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    <h4 class="modal-title"><strong>Search Order</strong></h4>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="input-group">
                                                <input id="txtSearch" type="text" class="form-control input-sm" placeholder="Search order..." />
                                                <span class="input-group-btn">
                                                    <button class="btn btn-primary btn-transparent">
                                                        <i class="fa fa-search"></i>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-md-8">
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="col-md-10">
                                            <div class="table-responsive">

                                                <table id="OrderDetail" class="table table-striped table-hover">
                                                    <thead class="no-bd">
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Order Name</th>
                                                            <th>Time</th>

                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>1 </td>
                                                            <td>Creative T-shirt Design  </td>
                                                            <td>1-Nov-14 UTC-08:00</td>
                                                        </tr>

                                                        <tr>
                                                            <td>2 </td>
                                                            <td>Digitizing</td>
                                                            <td>23-Aug-14 UTC-11:00</td>
                                                        </tr>

                                                        <tr>
                                                            <td>3 </td>
                                                            <td>Digitizing</td>
                                                            <td>23-Aug-14 UTC-11:00</td>
                                                        </tr>
                                                        <tr>
                                                            <td>4 </td>
                                                            <td>Digitizing</td>
                                                            <td>23-Aug-14 UTC-11:00</td>
                                                        </tr>
                                                        <tr>
                                                            <td>5 </td>
                                                            <td>Digitizing</td>
                                                            <td>23-Aug-14 UTC-11:00</td>
                                                        </tr>
                                                        <tr>
                                                            <td>6 </td>
                                                            <td>Digitizing</td>
                                                            <td>23-Aug-14 UTC-11:00</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <form action="#" class="dropzone">
                        <div class="fallback">
                            <input name="file" type="file" multiple />
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <div class="post-column-right">
                    <div class="form-group">
                        <div>
                            <label class="form-label">Client</label>
                        </div>
                        <input type="text" class="form-control" id="client">
                    </div>
                    <div class="form-group">
                        <div>
                            <label class="form-label pull-left">Order Type</label>
                        </div>
                        <select class="form-control" title="Select order type..">
                            <option></option>
                            <optgroup label="Vector">
                                <option>Vector1</option>
                                <option>Vector2</option>
                                <option>Vector3</option>
                            </optgroup>
                            <optgroup label="Creative">
                                <option>Creative1</option>
                                <option>Creative2</option>
                            </optgroup>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Priority</label>
                        <div class="controls">
                            <input type="checkbox" id="priority" name="priority" checked data-on-color="primary" data-label-text="Rush" data-off-color="danger" class="switch" data-on-text="Normal" data-off-text="Rush">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Status</label>
                        <div class="row">
                            <div class="col-md-12">
                                <label>
                                    <input type="radio" name="radio-choice-0" checked>Approved
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>
                                    <input type="radio" name="radio-choice-0">Waiting for information
                                </label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label>
                                    <input type="radio" name="radio-choice-0">Request for quote
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Quote</label>
                                <div class="input-group transparent">
                                    <span class="input-group-addon bg-brown">
                                        <i class="fa fa-dollar"></i>
                                    </span>
                                    <input type="text" class="form-control" placeholder="0.00">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Allocation Time</label>
                                <div class="input-group transparent">
                                    <input type="text" class="form-control">
                                    <span class="input-group-addon bg-brown">Min
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">PO</label>
                        <div class="controls">
                            <input class="form-control" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Tags</label>
                        <div class="controls">
                            <input class="form-control" type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 m-t-20 m-b-40 align-center">
                        <a href="posts.html" class="btn btn-success m-r-10 m-t-10"><i class="fa fa-shopping-cart"></i><span>&nbsp;Place Order</span></a>
                        <a href="posts.html" class="btn btn-danger m-t-10"><i class="fa fa-reply"></i><span>&nbsp;Cancel</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('input[name="priority"]').on('switchChange.bootstrapSwitch', function (event, state) {
            console.log(this); // DOM element
            console.log(event); // jQuery event
            console.log(state); // true | false
            var curr = $(this).attr("data-label-text");
            //alert($(this).prev().prev());
            console.log($(this).prev().prev().text());

            if ($(this).prev().prev().text() == "Rush") {
                $(this).prev().prev().text("Normal");
            }
            else {
                $(this).prev().prev().text("Rush");
            }
        });

        $("#client").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Client/ClientList",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (data) {
                            return { label: data.name, value: data.name };
                        }))
                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    });
</script>
